        img(src="images/icons/priority.png")
      button.button.white(rel="tooltip",title="Filter by group")
        img(src="images/icons/groups.png")
      button.button.white(rel="tooltip",title="Filter by tag")
        img(src="images/icons/tag.png")
      button.button.white(rel="tooltip",title="Filter by author")
        img(src="images/icons/author.png")
      button.button.white(rel="tooltip",title="Filter by completion")
        img(src="images/icons/completed.png")

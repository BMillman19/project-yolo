extends layout

block content
  div.sideNav
    p.triangle-isosceles.blue promptU
    div(id="profileBox")
      div.option
        img(src="images/icons/gear.png")
        | Account Settings
      div.option
        img(src="images/icons/site_map.png")
        | Manage Owned Groups
